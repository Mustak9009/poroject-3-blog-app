// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum UserType {
  USER
  AUTHOR
}

model User {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  userName String   @unique
  email    String   @unique
  role     UserType @default(USER)
  password String
}
